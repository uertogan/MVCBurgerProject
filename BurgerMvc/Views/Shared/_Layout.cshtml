@{
    var role = Context.Session.GetString("IsAdmin");
    var isActive = Context.Session.GetString("Email");
    var orderactive = Context.Session.GetString("OrderId");
    var userlogin = Context.Session.GetString("UserId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BurgerMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BurgerMvc.styles.css" asp-append-version="true" />

    @* Aşağıdaki link Index view'ında post silme butonu gibi bazı butonlara resim ekleyebilmek için yazılmıştır. *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .btn-group-horizontal {
            display: flex;
            justify-content: flex-end;
            width: 100%;
        }
    </style>
</head>
<body style="background:linear-gradient(to bottom right,black,grey,brown,orange);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background:linear-gradient(to bottom right,brown,grey, black);">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            font-size: 50px;
">
                        CodeBurger
                    </h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (role == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="Order" asp-action="Admin">Ana Sayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="Order" asp-action="MenuAdd">Menü Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="Order" asp-action="ExtraAdd">Ekstra Ekle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="Order" asp-action="GetByOrdersForUser">Tüm Siparişler</a>
                            </li>
                        }
                        @if (role == "False" && orderactive == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="OrderCustomer" asp-action="OrderAdd">Sipariş Oluştur</a>
                            </li>
                        }
                        @if (orderactive != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="OrderCustomer" asp-action="Index">AnaSayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 20px;" asp-area="" asp-controller="OrderCustomer" asp-action="OrderCart">Sepetim</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isActive == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 30px;" asp-area="" asp-controller="User" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 30px;" asp-area="" asp-controller="User" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                        @if (isActive != null)
                        {
                            @if (role == "False")
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 30px;" asp-area="" asp-controller="OrderCustomer" asp-action="GetByOrdersForUser">Siparişlerim</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 30px;" asp-area="" asp-controller="User" asp-action="Profille">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bolder" style="background: linear-gradient(to bottom right, rgba(255, 255, 0, 0.8), rgba(255, 165, 0, 0.8), red); -webkit-background-clip: text; -webkit-text-fill-color: transparent;
                               font-size: 30px;" asp-area="" asp-controller="User" asp-action="Logout">Çıkış Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BurgerMvc
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
