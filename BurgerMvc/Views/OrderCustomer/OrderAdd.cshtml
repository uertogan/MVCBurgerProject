@model OrderViewModel
@{
    var UserLoginId = Context.Session.GetInt32("UserId");
}
<script>
    window.onload = function () {
        // Formu otomatik olarak gönder
        document.getElementById('orderForm').submit();
    };
</script>

<form id="orderForm" asp-controller="OrderCustomer" asp-action="OrderAdd" method="post" enctype="multipart/form-data" class="form-control">
    <div class="form-group">
        <input type="hidden" id="UserId" name="UserId" value="@UserLoginId" />
    </div>
    <div class="form-group m-2">
        <!-- Butonu gizlemek için inline CSS kullanıyoruz -->
        <button type="submit" class="btn btn-primary" style="display: none;">Sipariş Ver</button>
    </div>
</form>