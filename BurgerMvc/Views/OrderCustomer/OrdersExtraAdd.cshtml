@model OrdersExtraViewModel
@{
    var orderactive = Context.Session.GetInt32("OrderId");

    var extraId = ViewBag.ExtraId;
}
<form asp-controller="OrderCustomer" asp-action="OrdersExtraAdd" method="post" enctype="multipart/form-data" class="form-control">
    <div class="form-group">
        <input type="hidden" id="OrderId" name="OrderId" value="@orderactive" />
    </div>
    <div class="form-group">
        <input type="hidden" id="ExtraIngredientId" name="ExtraIngredientId" value="@extraId" />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="1" min="1">
    </div>

    <div class="form-group m-2">
        <button type="submit" class="btn btn-primary">Siparişe Ekstra Ekle</button>
    </div>
</form>