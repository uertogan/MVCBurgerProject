@using BurgerMvc.Models.Enum
@model OrdersMenuViewModel

@{
    var orderactive = Context.Session.GetInt32("OrderId");
    var menuId = ViewBag.MenuId;
}

<form asp-controller="OrderCustomer" asp-action="OrdersMenuAdd" method="post" enctype="multipart/form-data" class="form-control">

    <div class="form-group">
        <input type="hidden" id="OrderId" name="OrderId" value="@orderactive" />
    </div>
    <div class="form-group">
        <input type="hidden" id="MenuItemId" name="MenuItemId" value="@menuId" />
    </div>
    <div class="form-group">
        <label for="Quantity">Miktar</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="1" min="1">
    </div>
    <div class="form-group">
        <label for="Size">Boyut Seçiniz</label>
        <select class="form-control" id="Size" name="Size">
            @foreach (var item in Enum.GetValues(typeof(Size)))
            {
                <option value="@((int)item)">
                    @item.ToString()
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <h5 class="alert alert-danger text-danger"> 20₺ fark ile Orta boy veya 50₺ fark ile Büyük boy almak isterseniz boyut değiştirebilirsiniz!!!</h5>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Siparişe Menü Ekle</button>
    </div>

</form>
