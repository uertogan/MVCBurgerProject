@model ExtraIngredientViewModel

<h2>Ekstra Ekleme</h2>

<form asp-controller="Order" asp-action="ExtraAdd" method="post" enctype="multipart/form-data" class="form-control">
    <div class="form-group">
        <label for="Name">Ekstra malzeme adını </label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>
    
    <div class="form-group">
        <label for="Price">Fiyatı</label>
        <input type="text" class="form-control" id="Price" name="Price" required></input>
    </div>
    <div class="form-group">
        <label for="PhotoUrl">Photo:</label>
        <input asp-for="PhotoUrl" type="file" class="form-control" id="PhotoUrl" />
    </div>
    <div class="form-group m-2">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>